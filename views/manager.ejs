<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>FBOOMX ‚Äî Account Manager</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
    rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'system-ui', 'sans-serif'] },
          colors: {
            dark: {
              50: '#1e2235',
              100: '#181b2e',
              200: '#13152a',
              300: '#0f1025',
              400: '#0b0c1f',
              500: '#08091a',
              600: '#050614'
            },
            accent: {
              DEFAULT: '#6c5ce7',
              light: '#a29bfe',
              dark: '#5a4bd1',
              glow: 'rgba(108, 92, 231, 0.3)'
            },
            success: { DEFAULT: '#00b894', light: '#55efc4' },
            danger: { DEFAULT: '#e17055', light: '#fab1a0' },
            warning: { DEFAULT: '#fdcb6e', light: '#ffeaa7' }
          },
          boxShadow: {
            'glow': '0 0 30px rgba(108, 92, 231, 0.15)',
            'glow-lg': '0 0 60px rgba(108, 92, 231, 0.2)',
            'card': '0 4px 24px rgba(0,0,0,0.3)',
            'card-hover': '0 8px 40px rgba(0,0,0,0.4)'
          }
        }
      }
    }
  </script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    ::-webkit-scrollbar {
      width: 5px;
    }

    ::-webkit-scrollbar-track {
      background: transparent;
    }

    ::-webkit-scrollbar-thumb {
      background: #2d2f4e;
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #6c5ce7;
    }

    body {
      background: #0b0c1f;
      background-image:
        radial-gradient(ellipse 80% 60% at 50% -20%, rgba(108, 92, 231, 0.08), transparent),
        radial-gradient(ellipse 60% 40% at 80% 100%, rgba(0, 184, 148, 0.05), transparent);
    }

    .glass-card {
      background: linear-gradient(135deg, rgba(30, 34, 53, 0.9), rgba(19, 21, 42, 0.95));
      border: 1px solid rgba(108, 92, 231, 0.1);
      backdrop-filter: blur(20px);
    }

    .glass-card:hover {
      border-color: rgba(108, 92, 231, 0.25);
      box-shadow: 0 8px 40px rgba(0, 0, 0, 0.4), 0 0 30px rgba(108, 92, 231, 0.08);
    }

    .group-card {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .group-card:hover {
      transform: translateY(-2px);
    }

    .btn-primary {
      background: linear-gradient(135deg, #6c5ce7, #5a4bd1);
      transition: all 0.2s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #7c6df7, #6c5ce7);
      box-shadow: 0 4px 20px rgba(108, 92, 231, 0.4);
      transform: translateY(-1px);
    }

    .btn-success {
      background: linear-gradient(135deg, #00b894, #00a383);
      transition: all 0.2s ease;
    }

    .btn-success:hover {
      background: linear-gradient(135deg, #00d2a4, #00b894);
      box-shadow: 0 4px 20px rgba(0, 184, 148, 0.4);
      transform: translateY(-1px);
    }

    .btn-danger {
      background: linear-gradient(135deg, #e17055, #d63031);
      transition: all 0.2s ease;
    }

    .btn-danger:hover {
      background: linear-gradient(135deg, #f17565, #e17055);
      box-shadow: 0 4px 20px rgba(225, 112, 85, 0.4);
      transform: translateY(-1px);
    }

    .btn-ghost {
      background: rgba(108, 92, 231, 0.08);
      border: 1px solid rgba(108, 92, 231, 0.15);
      transition: all 0.2s ease;
    }

    .btn-ghost:hover {
      background: rgba(108, 92, 231, 0.15);
      border-color: rgba(108, 92, 231, 0.3);
    }

    .input-field {
      background: rgba(11, 12, 31, 0.6);
      border: 1px solid rgba(108, 92, 231, 0.12);
      transition: all 0.2s ease;
    }

    .input-field:focus {
      border-color: rgba(108, 92, 231, 0.5);
      box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.1);
      outline: none;
    }

    .modal-overlay {
      background: rgba(5, 6, 20, 0.8);
      backdrop-filter: blur(8px);
    }

    .modal-content {
      background: linear-gradient(160deg, rgba(30, 34, 53, 0.98), rgba(13, 15, 31, 0.98));
      border: 1px solid rgba(108, 92, 231, 0.15);
      box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5), 0 0 60px rgba(108, 92, 231, 0.1);
    }

    .account-row {
      background: rgba(11, 12, 31, 0.5);
      border: 1px solid rgba(255, 255, 255, 0.04);
      transition: all 0.2s ease;
    }

    .account-row:hover {
      background: rgba(108, 92, 231, 0.06);
      border-color: rgba(108, 92, 231, 0.12);
    }

    .progress-ring {
      background: conic-gradient(#6c5ce7 var(--progress), rgba(108, 92, 231, 0.1) var(--progress));
    }

    .badge {
      background: linear-gradient(135deg, rgba(108, 92, 231, 0.15), rgba(108, 92, 231, 0.05));
      border: 1px solid rgba(108, 92, 231, 0.2);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(8px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(20px) scale(0.98);
      }

      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    @keyframes pulse-glow {

      0%,
      100% {
        box-shadow: 0 0 20px rgba(108, 92, 231, 0.1);
      }

      50% {
        box-shadow: 0 0 40px rgba(108, 92, 231, 0.2);
      }
    }

    .animate-fadeIn {
      animation: fadeIn 0.4s ease-out forwards;
    }

    .animate-slideUp {
      animation: slideUp 0.3s ease-out forwards;
    }
  </style>
</head>

<body class="text-gray-300 min-h-screen font-sans antialiased">

  <div class="max-w-[880px] mx-auto px-6 py-8">

    <!-- HEADER -->
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center gap-4">
        <div
          class="w-11 h-11 rounded-xl bg-gradient-to-br from-accent to-accent-dark flex items-center justify-center shadow-glow">
          <span class="text-xl">üöÄ</span>
        </div>
        <div>
          <h1 class="text-2xl font-extrabold text-white tracking-tight">Account Manager</h1>
          <p class="text-xs text-gray-500 mt-0.5 font-medium">Manage your browser groups & accounts</p>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <div id="groupCount" class="badge px-3 py-1.5 rounded-full text-xs font-semibold text-accent-light"></div>
        <button onclick="showCreateGroup()" id="btnCreateGroup"
          class="btn-primary px-5 py-2.5 text-white rounded-xl text-sm font-bold flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4" />
          </svg>
          Create Group
        </button>
      </div>
    </div>

    <!-- GROUP LIST -->
    <div id="groupList" class="space-y-4"></div>

    <!-- EMPTY STATE -->
    <div id="emptyState" class="hidden">
      <div class="glass-card rounded-2xl p-12 text-center">
        <div
          class="w-20 h-20 mx-auto mb-5 rounded-2xl bg-gradient-to-br from-dark-50 to-dark-200 flex items-center justify-center border border-dark-50">
          <span class="text-4xl opacity-40">üìÇ</span>
        </div>
        <h3 class="text-lg font-bold text-gray-400 mb-2">No groups yet</h3>
        <p class="text-sm text-gray-600 mb-6 max-w-xs mx-auto">Create your first group to start managing your browser
          accounts. Each group can have up to 2 accounts.</p>
        <button onclick="showCreateGroup()"
          class="btn-primary px-6 py-2.5 text-white rounded-xl text-sm font-bold inline-flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4" />
          </svg>
          Create Group
        </button>
      </div>
    </div>
  </div>

  <!-- CREATE GROUP MODAL -->
  <div id="createGroupModal" class="fixed inset-0 modal-overlay flex items-center justify-center z-50 hidden">
    <div class="modal-content rounded-2xl p-7 w-[420px] animate-slideUp">
      <div class="flex items-center gap-3 mb-5">
        <div
          class="w-10 h-10 rounded-xl bg-gradient-to-br from-accent/20 to-accent/5 flex items-center justify-center border border-accent/10">
          <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-bold text-white">New Group</h2>
          <p class="text-xs text-gray-500">Create a browser profile group</p>
        </div>
      </div>
      <input type="text" id="newGroupName" placeholder="Enter group name..."
        class="input-field w-full px-4 py-3 rounded-xl text-sm text-gray-200 mb-5 placeholder-gray-600">
      <div class="flex justify-end gap-2.5">
        <button onclick="closeCreateGroup()"
          class="btn-ghost px-5 py-2.5 text-gray-400 rounded-xl text-sm font-semibold">Cancel</button>
        <button onclick="createGroup()"
          class="btn-primary px-6 py-2.5 text-white rounded-xl text-sm font-bold">Create</button>
      </div>
    </div>
  </div>

  <!-- GROUP DETAIL MODAL -->
  <div id="groupDetailModal" class="fixed inset-0 modal-overlay flex items-center justify-center z-50 hidden">
    <div class="modal-content rounded-2xl p-7 w-[500px] max-h-[80vh] overflow-y-auto animate-slideUp">
      <!-- Header -->
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-xl bg-gradient-to-br from-accent/20 to-accent/5 flex items-center justify-center border border-accent/10">
            <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-bold text-white" id="detailGroupName"></h2>
            <p class="text-xs text-gray-500" id="detailAccountCount"></p>
          </div>
        </div>
        <button onclick="closeDetail()"
          class="w-8 h-8 rounded-lg bg-dark-300/50 hover:bg-dark-200 text-gray-500 hover:text-white flex items-center justify-center transition text-base">‚úï</button>
      </div>

      <!-- Account capacity indicator -->
      <div class="mb-5 p-3 rounded-xl bg-dark-400/50 border border-dark-50/30">
        <div class="flex items-center justify-between mb-2">
          <span class="text-xs font-semibold text-gray-400">Account Slots</span>
          <span class="text-xs font-bold text-accent-light" id="detailSlotText">0 / 2</span>
        </div>
        <div class="h-1.5 rounded-full bg-dark-300 overflow-hidden">
          <div id="detailSlotBar"
            class="h-full rounded-full bg-gradient-to-r from-accent to-accent-light transition-all duration-500"
            style="width: 0%"></div>
        </div>
      </div>

      <!-- Account list -->
      <div id="detailAccountList" class="space-y-2 mb-5"></div>

      <!-- Add account -->
      <div class="flex gap-2 mb-4">
        <input type="text" id="newAccountName" placeholder="Account name"
          class="input-field flex-1 px-4 py-2.5 rounded-xl text-sm text-gray-200 placeholder-gray-600">
        <button onclick="addAccount()"
          class="btn-success px-5 py-2.5 text-white rounded-xl text-sm font-bold flex items-center gap-1.5">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4" />
          </svg>
          Add
        </button>
      </div>

      <!-- Actions -->
      <div class="flex gap-2.5">
        <button onclick="generateAccounts()"
          class="flex-1 btn-ghost px-4 py-2.5 text-gray-300 rounded-xl text-sm font-semibold flex items-center justify-center gap-2">
          <svg class="w-4 h-4 text-accent-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Auto Generate
        </button>
        <button onclick="launchCurrentGroup()"
          class="flex-1 btn-primary px-4 py-2.5 text-white rounded-xl text-sm font-bold flex items-center justify-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Launch Group
        </button>
      </div>
    </div>
  </div>

  <script>
    const MAX_GROUPS = 2
    let groups = []
    let currentGroupId = null

    async function loadGroups() {
      groups = await window.api.getGroups()
      renderGroups()
    }

    function renderGroups() {
      const list = document.getElementById('groupList')
      const empty = document.getElementById('emptyState')
      const countBadge = document.getElementById('groupCount')
      const createBtn = document.getElementById('btnCreateGroup')

      countBadge.textContent = `${groups.length} / ${MAX_GROUPS} Groups`

      // Disable create button if at max
      if (groups.length >= MAX_GROUPS) {
        createBtn.style.opacity = '0.4'
        createBtn.style.pointerEvents = 'none'
        createBtn.title = `Maximum ${MAX_GROUPS} groups reached`
      } else {
        createBtn.style.opacity = '1'
        createBtn.style.pointerEvents = 'auto'
        createBtn.title = ''
      }

      if (groups.length === 0) {
        list.innerHTML = ''
        empty.classList.remove('hidden')
        return
      }

      empty.classList.add('hidden')
      list.innerHTML = groups.map((g, idx) => {
        const accountCount = g.accounts.length
        const slotPercent = (accountCount / 2) * 100
        const statusColor = accountCount === 0 ? 'text-gray-600' : accountCount < 2 ? 'text-warning' : 'text-success'
        const statusText = accountCount === 0 ? 'No accounts' : accountCount < 2 ? `${accountCount}/2 accounts` : '2/2 accounts ‚úì'
        const avatars = g.accounts.map((a, i) => `
          <div class="w-7 h-7 rounded-lg bg-gradient-to-br from-accent/25 to-accent/10 flex items-center justify-center border border-accent/15 text-[10px] font-bold text-accent-light ${i > 0 ? '-ml-1' : ''}" title="${a.name}">
            ${a.name.charAt(0).toUpperCase()}
          </div>
        `).join('')

        return `
          <div class="group-card glass-card rounded-2xl p-5 cursor-pointer animate-fadeIn" style="animation-delay: ${idx * 80}ms" onclick="openDetail('${g.id}')">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-accent/15 to-accent/5 flex items-center justify-center border border-accent/10">
                  <span class="text-xl">${idx === 0 ? 'üÖ∞Ô∏è' : 'üÖ±Ô∏è'}</span>
                </div>
                <div>
                  <h3 class="text-base font-bold text-white mb-1">${g.name}</h3>
                  <div class="flex items-center gap-3">
                    <span class="text-xs font-medium ${statusColor}">${statusText}</span>
                    ${accountCount > 0 ? `<div class="flex items-center">${avatars}</div>` : ''}
                  </div>
                </div>
              </div>
              <div class="flex gap-2 items-center">
                <button onclick="event.stopPropagation(); launchGroup('${g.id}')" class="btn-primary px-4 py-2 text-white rounded-xl text-xs font-bold flex items-center gap-1.5" ${accountCount === 0 ? 'style="opacity:0.4;pointer-events:none" title="Add accounts first"' : ''}>
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/></svg>
                  Launch
                </button>
                <button onclick="event.stopPropagation(); deleteGroup('${g.id}')" class="w-8 h-8 rounded-xl bg-danger/10 hover:bg-danger/20 text-danger hover:text-danger-light flex items-center justify-center transition text-xs font-bold border border-danger/10 hover:border-danger/20" title="Delete group">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                </button>
              </div>
            </div>
          </div>
        `
      }).join('')
    }

    // === CREATE GROUP ===
    function showCreateGroup() {
      if (groups.length >= MAX_GROUPS) {
        alert(`Maximum ${MAX_GROUPS} groups allowed. Delete an existing group first.`)
        return
      }
      document.getElementById('createGroupModal').classList.remove('hidden')
      const input = document.getElementById('newGroupName')
      input.value = ''
      setTimeout(() => input.focus(), 100)
    }

    function closeCreateGroup() {
      document.getElementById('createGroupModal').classList.add('hidden')
    }

    async function createGroup() {
      if (groups.length >= MAX_GROUPS) {
        alert(`Maximum ${MAX_GROUPS} groups allowed.`)
        return
      }
      const name = document.getElementById('newGroupName').value.trim()
      if (!name) return
      await window.api.addGroup(name)
      closeCreateGroup()
      await loadGroups()
    }

    async function deleteGroup(id) {
      if (!confirm('Delete this group and all its accounts? This action cannot be undone.')) return
      await window.api.deleteGroup(id)
      await loadGroups()
    }

    // === GROUP DETAIL ===
    async function openDetail(groupId) {
      currentGroupId = groupId
      const group = await window.api.getGroup(groupId)
      if (!group) return

      document.getElementById('detailGroupName').textContent = group.name
      document.getElementById('groupDetailModal').classList.remove('hidden')
      renderDetailAccounts(group)
    }

    function closeDetail() {
      document.getElementById('groupDetailModal').classList.add('hidden')
      currentGroupId = null
      loadGroups()
    }

    function renderDetailAccounts(group) {
      const list = document.getElementById('detailAccountList')
      const slotText = document.getElementById('detailSlotText')
      const slotBar = document.getElementById('detailSlotBar')
      const countText = document.getElementById('detailAccountCount')
      const accountCount = group.accounts.length

      slotText.textContent = `${accountCount} / 2`
      slotBar.style.width = `${(accountCount / 2) * 100}%`
      countText.textContent = `${accountCount} account${accountCount !== 1 ? 's' : ''} assigned`

      // Change bar color based on fill
      if (accountCount >= 2) {
        slotBar.className = 'h-full rounded-full bg-gradient-to-r from-success to-success-light transition-all duration-500'
      } else {
        slotBar.className = 'h-full rounded-full bg-gradient-to-r from-accent to-accent-light transition-all duration-500'
      }

      if (accountCount === 0) {
        list.innerHTML = `
          <div class="text-center py-8 rounded-xl border border-dashed border-dark-50/30">
            <div class="text-2xl mb-2 opacity-30">üë§</div>
            <p class="text-xs text-gray-600 font-medium">No accounts yet</p>
            <p class="text-[11px] text-gray-700 mt-1">Add accounts manually or use Auto Generate</p>
          </div>
        `
        return
      }

      list.innerHTML = group.accounts.map((a, i) => `
        <div class="account-row rounded-xl px-4 py-3 flex items-center justify-between group">
          <div class="flex items-center gap-3">
            <div class="w-9 h-9 rounded-lg bg-gradient-to-br from-accent/20 to-accent/5 flex items-center justify-center border border-accent/10 text-sm font-bold text-accent-light">
              ${a.name.charAt(0).toUpperCase()}
            </div>
            <div>
              <span class="text-sm font-semibold text-gray-200">${a.name}</span>
              <div class="text-[10px] text-gray-600 font-medium mt-0.5">Slot ${i + 1} ‚Ä¢ Browser Profile</div>
            </div>
          </div>
          <button onclick="removeAccount('${a.id}')" class="w-7 h-7 rounded-lg bg-danger/0 group-hover:bg-danger/10 text-transparent group-hover:text-danger flex items-center justify-center transition text-xs" title="Remove account">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
          </button>
        </div>
      `).join('')
    }

    async function addAccount() {
      if (!currentGroupId) return
      const group = await window.api.getGroup(currentGroupId)
      if (group && group.accounts.length >= 2) {
        alert('Maximum 2 accounts per group.')
        return
      }
      const input = document.getElementById('newAccountName')
      const name = input.value.trim()
      if (!name) return
      await window.api.addAccount(currentGroupId, name)
      input.value = ''
      input.focus()
      const updatedGroup = await window.api.getGroup(currentGroupId)
      renderDetailAccounts(updatedGroup)
    }

    async function removeAccount(accountId) {
      if (!currentGroupId) return
      await window.api.removeAccount(currentGroupId, accountId)
      const group = await window.api.getGroup(currentGroupId)
      renderDetailAccounts(group)
    }

    async function generateAccounts() {
      if (!currentGroupId) return
      await window.api.generateAccounts(currentGroupId)
      const group = await window.api.getGroup(currentGroupId)
      renderDetailAccounts(group)
    }

    async function launchCurrentGroup() {
      if (!currentGroupId) return
      await window.api.launchGroup(currentGroupId)
    }

    async function launchGroup(id) {
      await window.api.launchGroup(id)
    }

    // Enter & Escape key support
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        if (!document.getElementById('createGroupModal').classList.contains('hidden')) createGroup()
        else if (!document.getElementById('groupDetailModal').classList.contains('hidden')) addAccount()
      }
      if (e.key === 'Escape') {
        closeCreateGroup()
        closeDetail()
      }
    })

    loadGroups()
  </script>
