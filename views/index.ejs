<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Group: <%= groupName %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            dark: { 100: '#1a1a2e', 200: '#16213e', 300: '#0f3460', 400: '#0d1b3e' },
            accent: { DEFAULT: '#e94560', light: '#ff6b81' }
          }
        }
      }
    }
  </script>
  <style>
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: #16213e; }
    ::-webkit-scrollbar-thumb { background: #0f3460; border-radius: 3px; }
  </style>
</head>
<body class="bg-dark-100 text-gray-200 h-screen overflow-hidden font-sans">

  <!-- GRID MODE -->
  <div id="gridMode" class="grid grid-cols-2 grid-rows-1 w-full h-screen"></div>

  <!-- EXPANDED MODE -->
  <div id="expandedMode" class="flex h-screen w-full hidden">
    <div class="w-[30%] h-screen bg-dark-200 overflow-y-auto p-4 flex flex-col gap-3 border-r border-dark-300">

      <!-- Header -->
      <div>
        <div class="flex items-center justify-between pb-2.5 border-b border-dark-300">
          <h1 class="text-xl font-bold text-accent">ðŸ¤– <span id="expandedTitle">Browser 1</span></h1>
          <button onclick="collapseAll()" class="px-3 py-1.5 bg-accent hover:bg-accent-light text-white rounded-md text-xs font-bold transition">âŠž Grid</button>
        </div>
        <div id="slotSwitcher" class="flex gap-1 mt-2.5 flex-wrap"></div>
      </div>

      <!-- FEATURE TABS -->
      <% if (features.length > 0) { %>
      <div>
        <div class="flex gap-1 mb-2 flex-wrap">
          <% features.forEach(function(f, idx) { %>
            <button onclick="switchFeatureTab('<%= f.name %>')"
              class="feature-tab px-3 py-1.5 rounded-md text-xs font-semibold transition <%= idx === 0 ? 'bg-accent text-white' : 'bg-dark-300 text-gray-400 hover:text-white hover:bg-dark-100' %>"
              data-tab="<%= f.name %>">
              <%= f.name.replace(/-/g, ' ').replace(/\b\w/g, c => c.toUpperCase()) %>
            </button>
          <% }) %>
        </div>
        <% features.forEach(function(f, idx) { %>
          <div class="feature-panel" data-panel="<%= f.name %>" style="<%= idx === 0 ? '' : 'display:none;' %>">
            <%- f.ui %>
          </div>
        <% }) %>
      </div>
      <% } %>

      <!-- Status -->
      <div class="bg-dark-300 rounded-lg p-3">
        <h3 class="text-xs text-gray-500 uppercase tracking-wider mb-2">Status</h3>
        <div id="status" class="px-2.5 py-2 bg-dark-100 rounded text-xs border-l-[3px] border-gray-600">Ready</div>
      </div>
    </div>
  </div>

  <script>
    const SLOT_COUNT = <%= slotCount %>
    const slotAccounts = <%- slotAccounts %>
    let currentSlot = 0
    const slotOpen = new Array(SLOT_COUNT).fill(false)
    const slotSwitchCallbacks = [] // features register here

    // === FEATURE TABS ===
    function switchFeatureTab(name) {
      document.querySelectorAll('.feature-panel').forEach(p => {
        p.style.display = p.dataset.panel === name ? '' : 'none'
      })
      document.querySelectorAll('.feature-tab').forEach(t => {
        const isActive = t.dataset.tab === name
        t.className = 'feature-tab px-3 py-1.5 rounded-md text-xs font-semibold transition ' +
          (isActive ? 'bg-accent text-white' : 'bg-dark-300 text-gray-400 hover:text-white hover:bg-dark-100')
      })
    }

    // === BUILD PANEL TEMPLATE ===
    function buildPanelHTML(i) {
      const acc = slotAccounts[i]
      const name = acc ? acc.name.toUpperCase() : 'EMPTY'
      const isEmpty = !acc

      if (isEmpty) {
        return `
          <div class="h-[56px] min-h-[56px] bg-dark-400 flex flex-col border-b-2 border-gray-700">
            <div class="flex items-center justify-between px-1.5 py-0.5 bg-dark-300 h-5">
              <span class="text-[10px] font-bold text-gray-600 tracking-wide">${name}</span>
            </div>
            <div class="flex-1 flex items-center justify-center text-[10px] text-gray-600">No account assigned</div>
          </div>
        `
      }

      return `
        <div class="h-[56px] min-h-[56px] bg-gradient-to-b from-[#1a3a6e] to-dark-200 flex flex-col border-b-2 border-accent">
          <div class="flex items-center justify-between px-1.5 py-0.5 bg-dark-300 h-5">
            <span class="text-[10px] font-bold text-accent tracking-wide">${name}</span>
            <div class="flex gap-0.5">
              <button onclick="expandSlot(${i})" title="Expand" class="w-[18px] h-[18px] bg-emerald-600 hover:bg-emerald-500 text-white rounded-sm text-[10px] flex items-center justify-center transition">â›¶</button>
              <button onclick="closeBrowserSlot(${i})" title="Close" class="w-[18px] h-[18px] bg-red-600 hover:bg-red-500 text-white rounded-sm text-[10px] flex items-center justify-center transition">âœ•</button>
            </div>
          </div>
          <div class="flex items-center gap-0.5 px-1 h-[22px]">
            <button onclick="goBackSlot(${i})" class="px-1 py-0.5 bg-dark-100 hover:bg-accent text-gray-400 hover:text-white rounded-sm text-[10px] font-semibold transition">â—€</button>
            <button onclick="goFwdSlot(${i})" class="px-1 py-0.5 bg-dark-100 hover:bg-accent text-gray-400 hover:text-white rounded-sm text-[10px] font-semibold transition">â–¶</button>
            <button onclick="reloadSlot(${i})" class="px-1 py-0.5 bg-dark-100 hover:bg-accent text-gray-400 hover:text-white rounded-sm text-[10px] font-semibold transition">âŸ³</button>
            <input type="text" id="url-${i}" value="https://www.facebook.com" class="flex-1 h-[18px] px-1 bg-dark-100 border border-dark-300 rounded-sm text-gray-200 text-[9px] outline-none focus:border-accent min-w-[40px]">
            <button onclick="navSlot(${i})" class="px-1 py-0.5 bg-dark-100 hover:bg-accent text-gray-400 hover:text-white rounded-sm text-[10px] font-semibold transition">Go</button>
          </div>
          <div class="flex items-center gap-1 px-1.5 h-[14px] bg-dark-400 text-[9px] text-gray-500">
            <span>Status:</span> <span id="gstatus-${i}" class="text-emerald-500 font-semibold">Opening...</span>
          </div>
        </div>
      `
    }

    // Generate panels
    const grid = document.getElementById('gridMode')
    for (let i = 0; i < SLOT_COUNT; i++) {
      const panel = document.createElement('div')
      panel.className = 'border border-dark-300 flex flex-col overflow-hidden'
      panel.innerHTML = buildPanelHTML(i)
      grid.appendChild(panel)
    }

    // Generate slot switcher
    const switcher = document.getElementById('slotSwitcher')
    for (let i = 0; i < SLOT_COUNT; i++) {
      const acc = slotAccounts[i]
      if (!acc) continue
      const btn = document.createElement('button')
      btn.className = 'slot-btn w-8 h-7 rounded-md border-2 border-dark-300 bg-dark-100 text-gray-500 text-xs font-bold cursor-pointer transition hover:border-accent hover:text-white'
      btn.dataset.slot = i
      btn.textContent = i + 1
      btn.title = acc.name
      btn.onclick = () => switchExpanded(i)
      switcher.appendChild(btn)
    }

    // Auto-open notification
    window.api.onAllOpened(() => {
      for (let i = 0; i < SLOT_COUNT; i++) {
        if (slotAccounts[i]) {
          slotOpen[i] = true
          setGridStatus(i, 'Opened âœ“')
        }
      }
    })

    // === GRID ACTIONS ===
    function setGridStatus(slot, msg) {
      const el = document.getElementById('gstatus-' + slot)
      if (el) el.textContent = msg
    }

    async function closeBrowserSlot(slot) {
      await window.api.closeBrowser(slot)
      slotOpen[slot] = false
      setGridStatus(slot, 'Closed')
    }
    async function goBackSlot(slot) { await window.api.goBack(slot) }
    async function goFwdSlot(slot) { await window.api.goForward(slot) }
    async function reloadSlot(slot) {
      setGridStatus(slot, 'Reloading...')
      await window.api.reloadPage(slot)
      setGridStatus(slot, 'Reloaded âœ“')
    }
    async function navSlot(slot) {
      const url = document.getElementById('url-' + slot).value
      if (!url) return
      setGridStatus(slot, 'Navigating...')
      await window.api.navigate(slot, url)
      setGridStatus(slot, 'Done âœ“')
    }

    // === EXPAND / COLLAPSE ===
    async function expandSlot(slot) {
      // Save current slot data
      slotSwitchCallbacks.forEach(cb => cb('save', currentSlot))
      currentSlot = slot
      // Load new slot data
      slotSwitchCallbacks.forEach(cb => cb('load', currentSlot))
      const acc = slotAccounts[slot]
      document.getElementById('gridMode').style.display = 'none'
      document.getElementById('expandedMode').classList.remove('hidden')
      document.getElementById('expandedMode').style.display = 'flex'
      document.getElementById('expandedTitle').textContent = acc ? acc.name : 'Browser ' + (slot + 1)
      document.querySelectorAll('.slot-btn').forEach(b => {
        const isActive = parseInt(b.dataset.slot) === slot
        b.classList.toggle('!bg-accent', isActive)
        b.classList.toggle('!border-accent', isActive)
        b.classList.toggle('!text-white', isActive)
      })
      await window.api.expandSlot(slot)
    }
    async function switchExpanded(slot) { await expandSlot(slot) }

    async function collapseAll() {
      document.getElementById('gridMode').style.display = 'grid'
      document.getElementById('expandedMode').style.display = 'none'
      await window.api.collapseAll()
    }

    // === EXPANDED ACTIONS ===
    function setStatus(msg, type = 'info') {
      const el = document.getElementById('status')
      if (!el) return
      el.textContent = msg
      el.className = 'px-2.5 py-2 bg-dark-100 rounded text-xs border-l-[3px]'
      if (type === 'info') el.classList.add('border-blue-500')
      else if (type === 'success') el.classList.add('border-emerald-500', 'text-emerald-400')
      else if (type === 'error') el.classList.add('border-red-500', 'text-red-400')
    }


  </script>

  <!-- AUTO-LOADED FEATURE SCRIPTS -->
  <% features.forEach(function(f) { %>
    <script><%- f.client %></script>
  <% }) %>

</body>
</html>
